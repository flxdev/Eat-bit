extends _layout

block title
  title Восстановление пароля

block content
  .pagehead-wrap.text-center(style='background-image: url(img/hbg.png)')
    .inner-content
      .pagehead-content
        h1.h-title.h1.u-white Восстановление пароля
      .bread-container
        mixin bread(name)
          a(href="#").icon-link
            i 
            span #{name}
        +bread('Главная')
        +bread('Мой заказ')
  .inner-content.center-content
    .center-box
      form.offer-form.js-validate
        .white-box.client
          .h-title.h2 Восстановление пароля
            i.small-link.pop-close.closePopup
          .inputs-cont
            .input-item.s-100
              .input-wrapper.req
                input.input-main(type="email",data-validation="email required",data-validation-error-msg="Не заполнено")
                label.input-label E-mail
        .menu-nav
          .menu-nav-inner
            input(type="submit", value=' Отправить').btn.btn-black.btn-big



















  