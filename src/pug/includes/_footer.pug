.footer__main
	.footer__main-content
		//левая колонка
		.footer-content-block
			mixin footerlist(name, item1,item2,item3,item4,item5)
				.footer-list
					.u-bold.u-white #{name}
					ul
						li
							a(href="#").u-light.s-text.u-white #{item1}
						li
							a(href="#").u-light.s-text.u-white #{item2}
						li
							a(href="#").u-light.s-text.u-white #{item3}
						li
							a(href="#").u-light.s-text.u-white #{item4}
						li
							a(href="#").u-light.s-text.u-white #{item5}
			+footerlist('Программы','1000-1600 ккал','1600-2000 ккал','2100-2300 ккал','2300-3500 ккал','3500-4500 ккал')
			+footerlist('О сервисе','Доставка','Способы оплаты','Отзывы','Подарочные сертификаты','Новости')
			.footer-nav-block
				ul
					li
						a(href="#").u-bold.u-white Клуб Eat-bit
					li
						a(href="#").u-bold.u-white Личный кабинет
					li
						a(href="#").u-bold.u-white Карта сайта
					li
						a(href="#").u-bold.u-white Контакты
				// картинок 2 штуки в каждом блоке, загрейскейлили не все
				.footer-nav-payment
					mixin payment(img,img2)
						.payment-item
							img(src=img, alt="")
							img(src=img2, alt="")
					+payment('img/payment/visa.svg')
					+payment('img/payment/masterm.png','img/payment/master.png')
					+payment('img/payment/maestrom.png','img/payment/maestro.png')
					+payment('img/payment/ya2m.png','img/payment/ya2.png')
					+payment('img/payment/webmm.png','img/payment/webm.png')
					+payment('img/payment/qiwi2m.png','img/payment/qiwi2.png')
					+payment('img/payment/am.png')
					+payment('img/payment/bpsm.png')
		//правая колонка      
		.footer-contact-block
			.footer-contact-svyaz
				.describe-text Свяжитесь с нами
				a(href="tel:89260201481").u-number.u-white.h2 8 (926) 02-01-481
				.footer-mailto
					a(href="#",data-popup='callback').u-light.u-white.s-text Обратная связь 
					span.dot-divider.u-light.u-white.s-text . 
					a(href='mailto:info@eat-bit.ru').u-light.u-white info@eat-bit.ru
			.footer-contact-mail
				.describe-text Подпишитесь на акции, обещаем только полезную информацию! 
				form.footer-form.js-validate
					input(type="email" placeholder='E-mail',data-validation='email').footer-form-input
					button(type="submit").footer-form-submit.u-bold.u-white.s-text Подписаться
