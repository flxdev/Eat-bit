.modal-layout(data-modal='programm').js-popup-container
	//контейнер модалки
	.modal-container.modal-medium
		.modal-container-header
			.h-title.h2 Добавить программу
			i.small-link.pop-close.closePopup
		.modal-container-content
			form.modal-form
				ul.checkbox-wrap
					mixin Check(name)
						li.checkbox-item
							label.checkbox-outer 
								input.input-real(type="radio",name='group',value = name)
								span.input-fake #{name}
					+Check('800-1000 ккал')
					+Check('1000-1200 ккал')
					+Check('1400-1600 ккал')
					+Check('1600-1800 ккал')
					+Check('1800-2000 ккал')
					+Check('2100-2300 ккал')
					+Check('2300-2600 ккал')
					+Check('2300-2600 ккал')
					+Check('2300-2600 ккал')
					+Check('2600-2900 ккал')
					+Check('2900-3200 ккал')
				.slider-wrap.js-slider-wrap
					.slider-text-wrapper
						.slider-weeks
							span.js-slider-info.js-slider-week(data-index-1='1 день',data-index-2='1 неделя',data-index-3='2 недели',data-index-5='1 месяц')
							//размер скидки
							span.discount.js-slider-info(data-index-1='0%',data-index-2='-4%',data-index-3='-16%',data-index-5='-32%')
						.slider-amount
							// цена
							span.js-slider-info.js-slider-price(data-index-1='1600',data-index-2='1500',data-index-3='1400',data-index-5='1300')
							|₽/день
							//цена * значение отсюда =  .form-total-count
							.js-slider-info.js-slider-x(data-index-1='1',data-index-2='7',data-index-3='15',data-index-5='30')
					.rangeinput
						i.dot.dot25
						i.dot.dot50
						i.dot.dot0
						i.dot.dot100
				.form-footer
					.form-total
						//сюда сумма 
						.form-total-count
						//сюда недели
						.form-total-week.s-medium.u-halfgray
					.form-buttons
						a(href="#").btn.btn-black Добавить
