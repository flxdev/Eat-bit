extends _layout

block title
  title Регистрация

block content
  .pagehead-wrap.text-center(style='background-image: url(img/hbg.png)')
    .inner-content
      .pagehead-content
        h1.h-title.h1.u-white Регистрация
      .bread-container
        mixin bread(name)
          a(href="#").icon-link
            i 
            span #{name}
        +bread('Главная')
        +bread('Регистрация')
  .inner-content.center-content
    .center-box
      form.offer-form.js-validate
        .white-box.client
          .h-title.h2 Регистрация
            button(type="button",data-modal='login').icon-link.acc.js-popup-button
              i
              span Войти
          .inputs-cont
            .input-item.s-100
              .input-wrapper.req
                input.input-main(type="text",data-validation="length required",data-validation-length='min2',data-validation-error-msg="Не заполнено")
                label.input-label Ваше имя и фамилия
            .input-item.s-50
              .input-wrapper.req
                input.input-main(type="email",data-validation="email required",data-validation-error-msg="Не заполнено")
                label.input-label E-mail 
            .input-item.s-50
              .input-wrapper.req
                input.input-main(type="tel",data-validation="custom required",data-validation-regexp="^[-0-9()+ ]+$",data-validation-error-msg="Не заполнено")
                label.input-label Телефон 
            .input-item.s-50
              .input-wrapper.req
                input.input-main(type="password",data-validation="required",data-validation-error-msg="Это обязательное поле")
                label.input-label Пароль 
            .input-item.s-50
              .input-wrapper.req
                input.input-main(type="password",data-validation="required",data-validation-error-msg="Это обязательное поле")
                label.input-label Повторите пароль 
        .menu-nav
          .menu-nav-inner
            input(type="submit", value='Зарегистрироваться').btn.btn-black.btn-big



















  