extends _layout

block title
  title Изменить пароль

block content
  .pagehead-wrap.text-center.pagehead-center(style='background-image: url(img/hbg.png)')
    .inner-content
      .pagehead-content
        h1.h-title.h1.u-white Изменить пароль
      .bread-container
        mixin bread(name)
          a(href="#").icon-link
            i 
            span #{name}
        +bread('Главная')
        +bread('Мой заказ')
        +bread('мои данные')
  .acc-wrap
    .box-standart
      .mobile-dropdowm-trigger
        span.u-bold Открыть меню
        i.arrow-icon
      .acc-menu
        mixin accmenu(val)
          - var current = "Изменить пароль"
          a(href="#").acc-menu-item(class={active: val === current})
             span #{val}
        +accmenu('История заказов')
        +accmenu('Мои данные')
        +accmenu('Изменить пароль')
        +accmenu('Подписка')
        a(href="#").icon-link.exit 
          i
          span Выйти
  .inner-content.center-content
    .center-box
      form.offer-form.js-validate
        .white-box.client
          .h-title.h2 Настройка подписки
          .form-msg.succ 
            i.form-i
            | Изменения сохранены
          .h-title.h5 Как вы хотите получать новости
          .subscribe-wrapper.js-subscribe
            //value инпутов должно совпадать с data-type контейнеров
            .select-u-item
              label.input_label
                span.input_main
                  input.input-real(type="checkbox", checked='checked',value ='Email')
                  span.input-checked
                span.input-text E-mail
            .select-u-item
              label.input_label
                span.input_main
                  input.input-real(type="checkbox", checked='checked',value ='sms',)
                  span.input-checked
                span.input-text SMS-рассылка
            .inputs-cont    
              .input-item.s-50(data-type='Email')
                .input-wrapper.req
                  input.input-main(type="email",data-validation="email required",data-validation-error-msg="Не заполнено")
                  label.input-label E-mail 
              .input-item.s-50(data-type='sms')
                .input-wrapper.req
                  input.input-main(type="tel",data-validation="custom required",data-validation-regexp="^[-0-9()+ ]+$",data-validation-error-msg="Не заполнено")
                  label.input-label Телефон 
          .h-title.h5 Какие рубрики кам интересны   
          .subscribe-wrapper
            .select-u-item
              label.input_label
                span.input_main
                  input.input-real(type="checkbox",value ='news')
                  span.input-checked
                span.input-text Новости
            .select-u-item
              label.input_label
                span.input_main
                  input.input-real(type="checkbox",value ='discount',)
                  span.input-checked
                span.input-text Акции и скидки       
        .menu-nav
          .menu-nav-inner
            a(href="#").btn.btn-black.btn-big Сохранить



















  